					</StatusEffects>
				</CharacterAbilityApplyStatusEffects>
			</Abilities>
		</AbilityGroupEffect>
			
			
			
			
			<AbilityGroupInterval interval="1">
				<Conditions>
					<AbilityConditionHasItem tags="clowngearunique,clownmaskunique" requireall="true"/>
